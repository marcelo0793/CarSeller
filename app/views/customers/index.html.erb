<h3>Clientes</h3>

<table class="table table-hover table-striped">
  <tr>
    <th>Nombre</th>
    <th>Email</th>
    <th>Telefono</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr class="<%= cycle :success %> ">
    <td><%= customer.name %></td>
    <td><%= customer.email %></td>
    <td><%= customer.phone %></td>
    <td><button type="button" class: "btn btn-info"> <%= link_to 'Mostrar', customer%> </button> </td>
    <td> <button type="button" class: "btn btn-warning"> <%= link_to 'Editar', edit_customer_path(customer) %> </button> </td>
    <td> <button type="button" class: 'btn btn-danger'> <%= link_to 'Eliminar', customer, method: :delete, data: { confirm: 'Esta seguro?' }  %> </button> </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to icon('plus')+'Nuevo Cliente', new_customer_path, class: 'btn btn-success' %>
